<configuration id="application">

	<!-- SESSION -->
	<session id="Session">
		<use>false</use>
		<log>false</log>
		<user>false</user>
		<handler>false</handler>
		<sidform>false</sidform>		
	</session>

	<!-- SESSION NEW ID -->
	<sessionSID id="Session SID">
		<new>false</new>
	</sessionSID>

	<!-- APPLICATION -->
	<standard id="Standard Apps">
		<controller>ORM_1000</controller>		
		<action>index</action>		
	</standard>

	<!-- ROUTER -->
	<router id="Router">
		<routing>URL_REWRITE</routing>
		<htaccess>false</htaccess>			
	</router>	
	
	<!-- CACHE -->
	<cache id="Cache">
		<use>false</use>
	</cache>

	<!-- DATABASE -->
	<!-- DATABASE -->
	<database id="Database">
		<access>MYSQL</access>
		<host>localhost</host>
		<dbname>irs</dbname>		
		<dbuser>root</dbuser>		
		<dbpass></dbpass>		
	</database>

	<!-- ORM -->
	<orm id="ORM">
		<use>true</use>
	</orm>

	<!-- TRACE -->
	<trace id="Trace">
		<log>true</log>
		<file>log/fltr.log</file>
		<route>true</route>
	</trace>

</configuration>
